@page "/simple-radar"
<TindoECharts Style="@style" Option="@option"></TindoECharts>

@code {
    private string style = "width: 800px;height:600px;";

    private Option option;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            option = new Option
            {
                Title = new Title
                {
                    Text = "基础雷达图",
                },
                Tooltip = new Tooltip(),
                Legend = new Legend
                {
                    Data = new string[] { "预算分配（Allocated Budget", "实际开销（Actual Spending" }
                },
                Radar = new Tindo.Blazor.ECharts.Options.Radar
                {
                    TextStyle = new TextStyle
                    {
                        Color = "#fff",
                        BackgroundColor = "#999",
                        BorderRadius = 3,
                        Padding = new double[] {3, 5}
                    },
                    Indicator = new Indicator[]
                    {
                        new Indicator{Name ="销售", Max=6500},
                        new Indicator{Name ="管理", Max=16000},
                        new Indicator{Name ="信息技术", Max=30000},
                        new Indicator{Name ="客服", Max=38000},
                        new Indicator{Name ="研发", Max=52000},
                        new Indicator{Name ="研发", Max=25000},

                    }
                },
                Series = new Tindo.Blazor.ECharts.Options.Series.Radar[]
                {
                    new Tindo.Blazor.ECharts.Options.Series.Radar
                    {
                        Name= "预算 vs 开销（Budget vs spending）",
                        Data = new JsonObject[]
                    {
                            "{\"value\": [4300, 10000, 28000, 35000, 50000, 19000], \"name\": \"预算分配（Allocated Budget）\"}",
                            "{\"value\": [5000, 14000, 28000, 31000, 42000, 21000], \"name\": \"实际开销（Actual Spending）\"}",

                        }
                    }
                    }
            };

            this.StateHasChanged();
        }
    }
}
