@page "/radar-simple"

<TindoECharts Style="@style" Option="@option"></TindoECharts>

@code {
    private string style = "width: 800px;height:600px;";

    private Option option;


    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            option = new Option
            {
                Title = new Title { Text = "基础雷达图" },
                Tooltip = new Tooltip(),
                Legend = new Legend
                {
                    Data = new LegendData[]
                    {
                        new LegendData{ Name = "预算分配（Allocated Budget）"},
                        new LegendData{ Name = "实际开销（Actual Spending）"}
                    },
                },
                Radar = new Radar
                {
                    Name = new RadarName
                    {
                        TextStyle = new NameTextStyle
                        {
                            Color = "#fff",
                            BackgroundColor = "#999",
                            BorderRadius = 3,
                            Padding = new double[] {3, 5},
                        }
                    },
                    Indicator = new Indicator[]
                    {
                        new Indicator { Name = "销售（sales）", Max = 6500},
                         new Indicator { Name = "管理（Administration）", Max = 16000},
                          new Indicator { Name = "信息技术（Information Techology）", Max = 30000},
                           new Indicator { Name = "客服（Customer Support）", Max = 38000 },
                            new Indicator { Name = "研发（Development）", Max = 52000 },
                             new Indicator { Name = "市场（Marketing）", Max = 25000 },
                    }
                },
                Series = new SeriesBase[]
                {
                    new RadarSeries
                    {
                        Name = "预算 vs 开销（Budget vs spending）",
                        Data = new SeriesData[]
                        {
                            new RadarSeriesData
                            {
                                Value = new double []{ 4300, 10000, 28000, 35000, 50000, 19000 },
                                Name = "预算分配（Allocated Budget）"
                            },
                            new RadarSeriesData
                            {
                                Value = new double []{ 5000, 14000, 28000, 31000, 42000, 21000},
                                Name = "实际开销（Actual Spending）"
                            },
                        }

                    }
                }
            };
            this.StateHasChanged();
        }

    }

}
