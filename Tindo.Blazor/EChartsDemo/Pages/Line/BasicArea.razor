@page "/basic-area"

<TindoECharts Style="@style" Option="@option"></TindoECharts>


@code {

    private string style = "width: 600px;height:400px;";

    private Option option;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            option = new Option
            {
                XAxis = new[] { new XAxis
        {
            Type = AxisType.Category,
            Data = new string[] { "Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun" },
            BoundaryGap = new string[] { "20%", "20%" }
        } },

                YAxis = new[] { new YAxis
        {
            Type = AxisType.Value,
        } },

                Series = new Line[]
            {
                new Line
                {
                    Data = new int[] { 820, 932, 901, 934, 1290, 1330, 1320 },
                    AreaStyle = AreaStyle.Empty,
            }
    }

            };
            StateHasChanged();
        }
    }
}