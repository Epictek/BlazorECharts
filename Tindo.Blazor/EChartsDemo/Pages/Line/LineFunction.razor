@page "/line-function"

<TindoECharts Style="@style" Option="@option"></TindoECharts>

@code {
    private string style = "width: 800px;height:600px;";

    private Option option;
    private double Func(double x)
    {
        x /= 10;
        return Math.Sin(x) * Math.Cos(x * 2 + 1) * Math.Sin(x * 3 + 2) * 50;
    }

    private double[][] GenerateData()
    {
        List<double[]> data = new List<double[]>();

        double val = -200;

        while (val <= 200)
        {
            data.Add(new double[] { val, Func(val) });
            val += 0.1;
        }
        return data.ToArray();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            this.option = new Option
            {
                Animation = true,
                Grid = new Grid()
                {
                    Top=40,
                    Left=50,
                    Right=40,
                    Bottom=50,
                },
                XAxis = new XAxis
                {
                    Name = "x",
                    MinorTick = new MinorTick
                    {
                        Show = true,
                    },
                    SplitLine = new SplitLine
                    {
                        LineStyle = new LineStyle
                        {
                            Color = "#999"
                        }
                    },
                    MinorSplitLine = new MinorSplitLine
                    {
                        Show = true,
                        LineStyle = new LineStyle
                        {
                            Color = "#ddd",
                        }
                    },

                },
                YAxis = new YAxis
                {
                    Name= "y",
                    Min = -100,
                    Max = 100,
                    MinorTick = new MinorTick
                    {
                        Show = true,
                    },
                    SplitLine = new SplitLine
                    {
                        LineStyle = new LineStyle
                        {
                            Color = "#999"
                        }
                    },
                    MinorSplitLine = new MinorSplitLine
                    {
                        Show = true,
                        LineStyle = new LineStyle
                        {
                            Color = "#ddd",
                        }
                    }

                },
                DataZoom = new DataZoom[]
                {
                    new InsideDataZoom
                    {
                        Show = true,
                        FilterMode = FilterMode.None,
                        XAxisIndex = new int[]{0},
                        StartValue = -20,
                        EndValue = 20
                    },
                    new InsideDataZoom
                    {
                        Show= true,
                        FilterMode = FilterMode.None,
                        YAxisIndex = new int[]{0},
                        StartValue = -20,
                        EndValue = 20,
                    }
                },
                Series = new Line[]
                {
                    new Line
                    {
                        ShowSymbol = false,
                        Clip = true,
                        Data = GenerateData().Select(value=>new SeriesData(){Value=value}).ToArray(),
                    }
                }
            };

            this.StateHasChanged();
        }
    }


}
