@page "/polar-stack-bar"

    <TindoECharts Style="@style" Option="@option"></TindoECharts>

@code {
    private string style = "width: 1000px;height:800px;";

    public Option option;

    protected override void OnAfterRender(bool firstRender)
    {
        if(firstRender)
        {
            option = new Option
            {
                AngleAxis = new AngleAxis
                {
                    Type = AxisType.Category,
                    Data = new string[] { "周一", "周二", "周三", "周四", "周五", "周六", "周日" }
                },
                RadiusAxis = RadiusAxis.Empty,
                Polar = Polar.Empty,
                Series = new Bar[]
                {
                    new Bar
                    {
                        Data = new double[] { 1, 2, 3, 4, 3, 5, 1 },
                        CoordinateSystem = "polar",
                        Name = "A",
                        Stack = "a"
                    },
                    new Bar
                    {
                        Data = new double[] { 2, 4, 6, 1, 3, 2, 1 },
                        CoordinateSystem = "polar",
                        Name = "B",
                        Stack = "a"
                    },
                    new Bar
                    {
                        Data = new double[] { 1, 2, 3, 4, 1, 2, 5 },
                        CoordinateSystem = "polar",
                        Name = "C",
                        Stack = "a"
                    }
                },
                Legend = new Legend
                {
                    Data = new string[] {"A", "B", "C"},
                    Show = true
                }
            };
            StateHasChanged();
        }
    }
}
