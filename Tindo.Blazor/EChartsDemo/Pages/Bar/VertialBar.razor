@page "/vertical-bar"

<TindoECharts Style="@style" Option="@option"></TindoECharts>

@code {
    private string style = "width: 1000px;height:800px;";

    public Option option;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            this.option = new Option
            {
                Title = new Title
                {
                    Text = "世界人口总量",
                    Subtext = "数据来自网络"
                },
                Tooltip = new Tooltip
                {
                    Trigger = Trigger.Axis,
                    AxisPointer = new AxisPointer
                    {
                        Type = AxisPointerType.Shadow,
                    }
                },
                Legend = new Legend
                {
                    Data = new string[] { "2011年", "2012年" }
                },
                Grid = new Grid
                {
                    Left = "3%",
                    Right = "4%",
                    Bottom = "3%",
                    ContainLabel = true,
                },
                XAxis = new XAxis
                {
                    Type = AxisType.Value,
                    BoundaryGap = new double[] { 0, 0.1 },
                },
                YAxis = new YAxis
                {
                    Type = AxisType.Category,
                    Data = new string[] { "巴西", "印尼", "美国", "印度", "中国", "世界人口(万)" }
                },
                Series = new Bar[]
                {
                    new Bar
                    {
                        Name = "2011年" ,
                        Data = new double[]{ 18203, 23489, 29034, 104970, 131744, 630230 }
                    },
                    new Bar
                    {
                        Name = "2012年",
                        Data = new double[] { 19325, 23438, 31000, 121594, 134141, 681807 }
                    }
                    }
            };
            this.StateHasChanged();
        }
    }
}
