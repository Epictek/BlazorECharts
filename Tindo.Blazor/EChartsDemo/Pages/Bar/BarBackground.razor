@page "/bar-background"

<TindoECharts Style="@style" Option="@option"></TindoECharts>

@code {
    private string style = "width: 600px;height:400px;";

    private Option option;


    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            option = new Option
            {
                XAxis = new XAxis
                {
                    Type = AxisType.Category,
                    Data = new AxisData[]
                    {
                        new AxisData{Value="Mon"},
                        new AxisData{Value="Tue"},
                        new AxisData{Value="Wed"},
                        new AxisData{Value="Thu"},
                        new AxisData{Value="Fri"},
                        new AxisData{Value="Sat"},
                        new AxisData{Value="Sun"},
                    }
                },
                YAxis = new YAxis
                {
                    Type = AxisType.Value,
                },
                Series = new BarSeries[]
                {
                    new BarSeries
                    {
                        ShowBackground = true,
                        BackgroundStyle = new BackgroundStyle
                        {
                            Color = "rgba(220, 220, 220, 0.8)",
                        },
                        Data = new SeriesData[]
                        {

                            new SeriesData {Value = 120},
                            new SeriesData {Value = 200},
                            new SeriesData {Value = 150},
                            new SeriesData {Value = 80},
                            new SeriesData {Value = 70},
                            new SeriesData {Value = 110},
                            new SeriesData {Value = 130},
                        }
                    }
                }
            };
            this.StateHasChanged();
        }

    }

}
