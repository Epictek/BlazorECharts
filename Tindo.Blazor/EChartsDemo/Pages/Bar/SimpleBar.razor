@page "/simple-bar"


<Tindo.Blazor.ECharts.TindoECharts Style="@style" Option="@option">

</Tindo.Blazor.ECharts.TindoECharts>


@code {
    private string style = "width: 800px;height:400px;";

    private Option option;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            option = new Option
            {
                XAxis = new XAxis
                {
                    Type = AxisType.Category,
                    Data = new string[] { "Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun" }
                },
                YAxis = new YAxis
                {
                    Type = AxisType.Value,
                },
                Series = new[]
            {
                new Bar
                {
                    Data = new int[] { 120, 200, 150, 80, 70, 110, 130 },
                }
            }

            };
            StateHasChanged();
        }

    }

}