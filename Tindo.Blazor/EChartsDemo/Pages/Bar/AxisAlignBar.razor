@page "/axis-align-bar"

<TindoECharts Style="@style" Option="@option"></TindoECharts>

@code{
    private string style = "width: 800px;height:400px;";
    private Option option;

    protected override void OnAfterRender(bool firstRender)
    {
        if(firstRender)
        {
            option = new Option
            {
                Color = new string[] {"#3398D8"},
                Tooltip = new Tooltip
                {
                    Trigger = Trigger.Axis,
                    AxisPointer = new AxisPointer
                    {
                        Type = AxisPointerType.Shadow,
                    }
                },
                Grid  = new Grid
                {
                    Left = "3%",
                    Right = "4%",
                    Bottom = "3%",
                    ContainLabel = true,
                },
                XAxis = new XAxis[]
                {
                    new XAxis
                    {
                        Type = AxisType.Category,
                        Data = new string[]{ "Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun" },
                        AxisTick = new AxisTick
                        {
                            AlignWithLabel = true,
                        }
                    },
                },
                YAxis = new YAxis[]
                {
                    new YAxis
                    {
                        Type = AxisType.Value,
                    }
                },
                Series = new Bar[]
                {
                    new Bar
                    {
                        Name = "直接访问",
                        BarWidth = "60%",
                        Data = new double[]{ 10, 52, 200, 334, 390, 330, 220 }
                    }
                }

            };
            StateHasChanged();
        }
    }
}