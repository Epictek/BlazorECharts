<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Blazor ECharts Demo</a>
</div>

<div>
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=> expandLine=!expandLine ">
                @if (expandLine)
                {
                    <span class="oi oi-minus" aria-hidden="true"></span>
                }
                else
                {
                    <span class="oi oi-plus" aria-hidden="true"></span>
                }
                Line
            </NavLink>
            @if (expandLine)
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="basic-line">
                            <span class="oi oi-signal" aria-hidden="true"></span> Basic Line
                        </NavLink>
                    </li>
                </ul>
            }
        </li>
    </ul>
</div>

@code {

    private bool expandLine;

    private bool expandBar;

    private bool expandPie;

    private bool expandScatter;

    private bool expandRadar;
}